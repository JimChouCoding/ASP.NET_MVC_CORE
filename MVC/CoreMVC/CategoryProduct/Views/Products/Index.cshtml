@section Styles
{
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <style>
    </style>
}

<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <td>ProductId</td>
            <td>ProductName</td>
            <td>SupplierId</td>
            <td>CategoryId</td>
            <td>QuantityPerUnit</td>
            <td>UnitPrice</td>
            <td>UnitsInStock</td>
            <td>UnitsOnOrder</td>
            <td>ReorderLevel</td>
            <td>Discontinued</td>
        </tr>
    </thead>
</table>

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="//cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>
    <script>
        $(document).ready(function(){
            $("table").dataTable({
                processing: true,
                serverSide: true,
                ajax:{
                    type:"POST",
                    url: "Products/IndexJson",
                    // dataSrc:function(data){
                    //     //對data加工處理
                    //     //alert(JSON.stringify(data));
                    //     return data;
                    // }
                },
                columns:[
                    { data:"productId", width: "10%"},
                    { data:"productName", width: "10%"},
                    { data:"supplierId", width: "10%"},
                    { data:"categoryId", width: "10%"},
                    { data:"quantityPerUnit", width: "10%"},
                    { data:"unitPrice", width: "10%"},
                    { data:"unitsInStock", width: "10%"},
                    { data:"unitsOnOrder", width: "10%"},
                    { data:"reorderLevel", width: "10%"},
                    { data:"discontinued", width: "10%"},
                ],
                fixedHeader:{
                    header:true
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.3/i18n/zh-HANT.json',
                },
            });        
        });

    </script>
}